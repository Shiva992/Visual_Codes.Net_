@model IEnumerable<ShivaStudents.Models.Department>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-controller=Department asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                    <a asp-controller=Department asp-action="Edit" asp-route-id="@item.DepartmentID">Edit</a>
                    <a asp-controller=Department asp-action ="Remove" asp-route-id="@item.DepartmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
